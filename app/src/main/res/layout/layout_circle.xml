<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/circle_item_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="6dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circle_img_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/circle_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小白妞"
            android:layout_marginLeft="66dp"
            android:textSize="14sp"
            android:textColor="@color/colorgry" />

        <TextView
            android:id="@+id/circle_time"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-13"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="@color/colorgry" />
    </RelativeLayout>

    <TextView
        android:id="@+id/circle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="阿发啊飞" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/circle_grid_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>