<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bitmap_bg">

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_marginTop="142dp"
        android:background="@drawable/my_bg"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_myname"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:text="我是吃不胖的小姐姐"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorgry"/>
        
        <LinearLayout
            android:id="@+id/my_one_means"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="70dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:src="@drawable/my_img1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人资料"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_two_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/my_img2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的圈子"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_three_foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/my_img3"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的足迹"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_four_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/my_img4"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_five_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="70dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@drawable/my_img5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收货地址"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="退出登录"
            android:background="@drawable/back_btn_bg"
            android:textColor="@android:color/white"/>
        
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_myphoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="102dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bitmap_my_head"/>

</RelativeLayout>